@model LoginViewModel
@{
    Layout = "~/Areas/LexLibraryRbac/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "登入";
}

<form asp-action="Login">
    <input asp-for="ReturnUrl" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group">
        <div class="form-label-group">
            <input asp-for="Account" type="text" class="form-control" placeholder="Account" autofocus />
            <label asp-for="Account"></label>
        </div>
        <span asp-validation-for="Account" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-label-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <label asp-for="Password"></label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="IsPersistent" type="checkbox" value="true"> 記住我
            </label>
        </div>
    </div>
    <button class="btn btn-primary btn-block" type="submit">送出</button>
</form>
<div class="text-center">
    <a class="d-block small mt-3" asp-action="Register">註冊帳號</a>
    <a class="d-block small" asp-action="ForgotPassword">忘記密碼</a>
</div>