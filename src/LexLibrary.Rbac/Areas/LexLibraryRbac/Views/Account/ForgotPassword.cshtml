@model ForgotPasswordViewModel
@{
    Layout = "~/Areas/LexLibraryRbac/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "忘記密碼";
}
<form asp-action="ForgotPassword">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group">
        <div class="form-label-group">
            <input asp-for="Account" class="form-control" placeholder="Account" autofocus />
            <label asp-for="Account"></label>
        </div>
        <span asp-validation-for="Account" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-label-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button class="btn btn-primary btn-block" type="submit">送出</button>
</form>